// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (ctrl-shift-p)
{
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"ui_font_size": 18,
	"buffer_font_size": 20,
	"ui_font_family": "Ubuntu",
	"buffer_font_family": "DejaVu Sans Mono",
	"buffer_line_height": { "custom": 1.75 },
	"middle_click_paste": false,
	"theme": {
		"mode": "dark",
		"light": "One Light",
		"dark": "Catppuccin Mocha"
	},
	"autosave": "on_focus_change",
	"auto_update": true,
	"confirm_quit": true,
	"scrollbar": {
		"cursors": false,
		"git_diff": false
	},
	"tab_bar": {
		"show_nav_history_buttons": false
	},
	"tabs": {
		"file_icons": true
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"file_scan_exclusions": ["**/.env"],
	"indent_guides": {
		"active_line_width": 3,
		"coloring": "fixed"
	},
	"hard_tabs": true,
	"preferred_line_length": 85,
	"soft_wrap": "bounded",
	"project_panel": {
		"default_width": 320,
		"indent_size": 30,
		"indent_guides": { "show": "never" },
		"auto_fold_dirs": false,
		"scrollbar": { "show": "never" }
	},
	"outline_panel": {
		"default_width": 320,
		"indent_size": 30,
		"auto_fold_dirs": false,
		"scrollbar": { "show": "never" }
	},
	"git": {
		"inline_blame": { "enabled": false }
	},
	"lsp": {
		"pyright": {
			"settings": {
				"python.analysis": {
					"typeCheckingMode": "basic",
					"reportInconsistentIndentation": false
				}
			}
		}
	}
}
